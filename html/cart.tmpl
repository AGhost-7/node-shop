<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Category</th>
      <th>Manufacturer</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>

    <tr ng-repeat="item in items">
      <td>{{ item.name }}</td>
      <td>{{ item.category }}</td>
      <td>{{ item.manufacturer }}</td>
      <td>{{ item.quantity }}</td>
      <td>{{ item.price | currency}}</td>
      <td>
        <button class="remove-btn" ng-click="remove(item, $index)">X</button>
      </td>
    </tr>

    <tr>
      <td>Subtotal</td>
      <td>{{subtotal | currency}}</td>
    </tr>
    <tr>
      <td>Tax</td>
      <td>{{tax | currency}}</td>
    </tr>
    <tr>
      <td>Total</td>
      <td>{{total | currency}}</td>
    </tr>

  </tbody>
</table>
