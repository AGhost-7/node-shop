{
  "name": "shop-node",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "start": "./bin/www",
    "//": "Run in production mode as a daemon.",
    "prod:start": "forever start -c coffee bin/www",
    "prod:stop": "forever stop bin/www",
    "//": "Restart the daemon",
    "prod:restart": "forever restart bin/www",
    "build:client": "gulp build",
		"prod:build": "npm run build:client && coffee -c */*.coffee",
    "watch:client": "gulp watch",
    "watch:node": "BLUEBIRD_DEBUG=1 nodemon -e coffee --ignore /public --ignore /test --ignore /client --ignore /.client",
    "//": "Run full setup for development.",
    "dev": "npm run watch:client & npm run watch:node",
    "test:unit": "mocha test/unit",
    "test:integration": "mocha test/integration",
    "debug:node": "coffee -mc */*.coffee && node-debug app.js"
  },
  "dependencies": {
    "angular": "^1.4.0",
    "bluebird": "^2.9.25",
    "body-parser": "~1.12.0",
    "cookie-parser": "~1.3.4",
    "debug": "~2.1.1",
    "express": "~4.12.2",
    "forever": "^0.14.1",
    "lodash": "^3.9.3",
    "morgan": "~1.5.1",
    "pg": "^4.3.0",
    "serve-favicon": "~2.2.0"
  },
  "devDependencies": {
    "coffee-script": "^1.9.2",
    "gulp": "^3.8.11",
    "gulp-coffee": "^2.3.1",
    "gulp-concat": "^2.5.2",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "gulp-watch": "^4.2.4",
    "mocha": "^2.2.5",
    "nodemon": "^1.3.7",
    "should": "^6.0.1",
    "supertest": "^1.0.1",
    "uglify-js": "^2.4.23"
  }
}
